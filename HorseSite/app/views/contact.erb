<div>
  
  <div class="page-header"><h1>Contact</h1></div>

  <form action="/contact" method="post" class="form-horizontal">
    <div class="container">
      <div class="form-group">
        <label class="col-md-2 control-label" for="name">Name</label>
        <div class="col-md-4"><input class="form-control" type="text" id="name"></div>
      </div>
      <div class="form-group">
        <label class="col-md-2 control-label" for="email">Email</label>
        <div class="col-md-4"><input class="form-control" type="text" id="email"></div>
      </div>
      <div class="form-group">
        <label class="col-md-2 control-label" for="subject">Subject</label>
        <div class="col-md-4"><input class="form-control" type="text" id="subject"></div>
      </div>
      <div class="form-group">
        <label class="col-md-2 control-label" for="message">Message</label>
        <div class="col-md-4"><textarea class="form-control" rows="3" id="message"></textarea></div>
      </div>
      <button type="submit" class="btn btn-default">Send</button>
    </div>
  </form>
</div>
