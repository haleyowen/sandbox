<div>
  <div class="page-header"><h2>Register</h2></div>

  <form class="form-horizontal" action="/register" method="post">
    <div class="container">

      <% if form.failed_on?(:email) %>
        <div class="form-group required has-error">
          <label class="col-md-2 control-label" for="email">Email</label>
          <div class="col-md-4"><input type="text" class="form-control" name="email" id="email" placeholder="Enter a valid email."></div>
        </div>
      <% else %>
        <div class="form-group required">
          <label class="col-md-2 control-label" for="email">Email</label>
          <div class="col-md-4"><input class="form-control" type="text" name="email" id="email"></div>
        </div>
      <% end %>

      <% if form.failed_on?(:password) %>
        <div class="form-group required has-error">
          <label class="col-md-2 control-label" for="password">Password</label>
          <div class="col-md-4"><input type="password" class="form-control" name="password" id="password" placeholder="Enter a password."></div>
        </div>
      <% else %>
        <div class="form-group required">
          <label class="col-md-2 control-label" for="password">Password</label>
          <div class="col-md-4"><input class="form-control" type="password" name="password" id="password"></div>
        </div>
      <% end %>


      <% if form.failed_on?(:password_confirm) || form.failed_on?(:same_password) %>
        <div class="form-group required has-error">
          <label class="col-md-2 control-label" for="password_confirm">Confirm Password</label>
          <% if form.failed_on?(:password_confirm) %>
            <div class="col-md-4"><input type="password" class="form-control" name="password_confirm" id="password_confirm" placeholder="Confirm your password."></div>
          <% end %>
          <% if form.failed_on?(:password_safe) %>
            <div class="col-md-4"><input type="password" class="form-control" name="password_confirm" id="password_confirm" placeholder="Your password did not match."></div
          <% end %>
        </div>
      <% else %>
        <div class="form-group required">
          <label class="col-md-2 control-label" for="password_confirm">Confirm Password</label>
          <div class="col-md-4"><input class="form-control" type="password" name="password_confirm" id="password_confirm"></div>
        </div>
      <% end %>
      <button type="submit" class="btn btn-default">Sign Up</button>
    </div>
  </form>
</div>
